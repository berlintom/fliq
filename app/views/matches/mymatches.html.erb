<h1>My booked matches</h1>
  <div class="container">
      <% @participations.each do |participation| %>
        <%=link_to match_path(participation.match), class: "card-trip" do %>
          <p>When? <%= participation.match.start_date %> - <%= participation.match.end_date %><p>
          <p>Where? <%= participation.match.venue_id %><p>
          <p>Table <%= participation.match.venue_id %><p>
          <p>Match Capacity: <%= participation.match.capacity %></p>
          <p>Status: <%= participation.status %><p>
          <p>Team: <%= participation.team %><p>
        <% end %>
      <% end %>
  </div>
<h1>My created matches</h1>
<div class="container">
    <% @matches.each do |match| %>
      <p>When? <%= match.start_date %> - <%= match.end_date %><p>
      <p>Where? <%= match.venue_id %><p>
      <p>Table <%= match.venue_id %><p>
      <p>Match Capacity: <%= match.capacity %></p>
      <p>Participants: <% match.participations.each do |participation|%>
        <div class="card-trip">
          <%= participation.user.user_name %>
          <%= participation.status %>
          <%= participation.team %>
          <% if participation.status == "pending" %>
            <div class="btn btn-cta"><%= link_to "Accept", participation_accept_path(participation), method: :patch %></div>
            <div class="btn btn-cta"><%= link_to "Decline", participation_decline_path(participation), method: :patch %></div>
          <% elsif participation.status == "accepted" %>
            <div class="btn btn-normal"><%= link_to "Decline", participation_decline_path(participation), method: :patch %></div>
          <% else %>
            <div class="btn btn-normal"><%= link_to "Accept", participation_accept_path(participation), method: :patch %></div>
          <% end %>

          <% if participation.team == nil %>
            <%= link_to "Team 1", participation_team_one_path(participation), method: :patch %>
            <%= link_to "Team 2", participation_team_two_path(participation), method: :patch %>
          <% elsif participation.team == 1 %>
            <%= link_to "Team 2", participation_team_two_path(participation), method: :patch %>
          <% elsif participation.team == 2 %>
            <%= link_to "Team 1", participation_team_one_path(participation), method: :patch %>
          <% end %>

        </div>
      <% end %></p>
  <% end %>
</div>
