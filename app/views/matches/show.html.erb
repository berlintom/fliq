<div class="container">
  <div class="card">
    <% if @userparticipants.include?(current_user)%>
      <p>Date? <%= @match.date.strftime("%d.%m.%y") %><p>
      <p>Time? <%= @match.start_time.time.to_s(:time) %> - <%= @match.end_time.time.to_s(:time) %><p>
      <p>Where? <%= @match.venue.address %><p>
      <p>Type of Table? <%= @match.venue.table_type %><p>
      <p>How many Players? <%= @match.capacity %></p>
      <div class="btn btn-primary"><%= link_to "Back to all matches", matches_path %></div>
    <% else %>
      <p>When? <%= @match.start_date.strftime("%d.%m.%y") %> - <%= @match.end_date.strftime("%d.%m.%y") %><p>
      <p>Where? <%= @match.venue.address %><p>
      <p>Type of Table? <%= @match.venue.table_type %><p>
      <p>How many Players? <%= @match.capacity %></p>
      <% if @match.user == current_user %>
        <p><em>You created this match</em></p>
      <% else %>
        <div class="btn btn-primary"><%= link_to "Participate", match_participations_path(@match), method: :post %></div>
      <% end %>
      <div class="btn btn-primary"><%= link_to "Back to all matches", matches_path %></div>
    <% end %>
    <%= link_to "Who is #{@match.user.user_name}", user_path(@match.user) %></div>
  </div>
</div>
