<div class="container">
    <% @matches.each do |match| %>
    <%=link_to match_path(match), class: "card-trip" do %>
    <p>When? <%= match.start_date %> - <%= match.end_date %><p>
    <p>Where? <%= match.venue_id %><p>
    <p>Table <%= match.venue_id %><p>
    <p>Match Capacity: <%= match.capacity %></p>
    <%= cl_image_tag("https://source.unsplash.com/random",
      width: 400, height: 300, crop: :fill) %>
    <%= cl_image_tag("https://source.unsplash.com/random",
      width: 150, height: 150, crop: :thumb, gravity: :face) %>
    <% end %>
  <% end %>
</div>
