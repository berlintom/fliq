<div class="form">
    <%= simple_form_for :search, url: matches_path, method: "GET", html: { class: 'form-inline' } do |f| %>
      <%= f.input :address, input_html: { data: { geocoder_target: "address" }},
      wrapper_html: { data: { controller: "geocoder", geocoder_api_key_value: ENV['MAPBOX_API_KEY'] }} %>
      <%= f.input :date, as: :date, placeholder: 'Choose the date!', html5: true, label: '' %>
      <%= f.submit "Let's FliQ", class: "btn btn-primary" %>
    <% end %>
</div>
