          <path d="M125.195 88.0385C106.083 109.282 98.8602 98.5144 86.4783 87.3735C74.8243 76.8877 63.6801 71.5561 80.6458 50.4962C93.0767 36.6793 114.388 31.5542 126.042 42.0401C137.695 52.526 137.626 74.2215 125.195 88.0385Z" fill="#50B0A7"/>
          <path d="M117.599 75.438C109.75 84.1638 97.1319 88.3905 98.6376 89.7846C100.143 91.1787 111.299 88.1708 119.948 80.1459C128.596 72.1209 128.565 59.5798 127.06 58.1857C125.554 56.7916 125.447 66.7122 117.599 75.438Z" fill="white"/>
